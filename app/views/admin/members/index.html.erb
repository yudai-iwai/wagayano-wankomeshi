<div class="bg-success text-white">
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row mt-4 mb-3">
    <div class="col-9">
      <span class="bg-warning h3">会員一覧</span>
    </div>
    <div class="col-3"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-border table-hover">
        <tr class="bg-light">
          <th class="col-1">ID</th>
          <th class="col-5">会員名</th>
          <th class="col-4">メールアドレス</th>
          <th class="col-2">ステータス</th>
        </tr>
        <% @members.each do |member| %>
        <tr>
          <td class="border-bottom"><%= member.id %></td>
          <td class="border-bottom">
            <%= link_to admin_member_path(member.id), class: "text-dark" do %>
              <%= member.name %>
            <% end %>
          </td>
          <td class="border-bottom"><%= member.email %></td>
            <% if member.is_deleted == false %>
              <td class="text-success font-weight-bold border-bottom"><%= member.boolean_label(member.is_deleted) %></td>
            <% else %>
              <td class="text-secondary font-weight-bold border-bottom"><%= member.boolean_label(member.is_deleted) %></td>
            <% end %>
        </tr>
        <% end %>
      </table>
      <div class="pagination">
        <%= paginate @members %>
      </div>
    </div>
  </div>
</div>