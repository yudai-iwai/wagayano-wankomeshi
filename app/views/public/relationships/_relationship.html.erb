<% if current_member.following?(member) %>
  <%= link_to "フォローを外す", member_relationships_path(member.id), method: :delete, remote: true, class: "btn btn-secondary btn-block" %>
<% else %>
  <%= link_to "フォローする", member_relationships_path(member.id), method: :post, remote: true, class: "btn btn-primary btn-block" %>
<% end %>