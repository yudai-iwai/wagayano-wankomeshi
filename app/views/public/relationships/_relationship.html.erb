<% if current_member.following?(member) %>
  <%= link_to member_relationships_path(member.id), method: :delete, remote: true do %>
    <button class="btn btn-secondary btn-block">フォローを外す</button>
  <% end %>
<% else %>
  <%= link_to member_relationships_path(member.id), method: :post, remote: true do %>
    <button class="btn btn-primary btn-block">フォローする</button>
  <% end %>
<% end %>