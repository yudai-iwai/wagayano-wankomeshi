<div class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-borderd">
          <tr class="table-borderless">
            <th>
              <span class="bg-light h3 col-12">会員詳細</span>
            </th>
            <th>
              <% unless @member == current_member %>
                <% if current_member.following?(@member) %>
                  <%= link_to "フォローを外す", member_relationship_path(@member.id), method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= link_to "フォローする", member_relationships_path(@member.id), method: :post, class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </th>
          </tr>
          <tr class="bg-light">
            <th class="col-3">会員名</th>
            <th class="col-3">愛犬の名前</th>
            <th class="col-3">愛犬の犬種</th>
            <th class="col-3">愛犬の年齢</th>
            <th class="col-3">愛犬の性別</th>
          </tr>
          <tr>
            <td class="border-bottom">
              <% if @member.image.attached? %>
                <%= image_tag @member.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image_member', size: "100x100" %>
              <% end %>
              <%= @member.name %><br>
              <% if @member.is_deleted == true %>
                <p>＜退会済み＞</p>
              <% end %>
            </td>
            <td class="border-bottom"><%= @member.dog_name %></td>
            <td class="border-bottom"><%= @member.dog_breed %></td>
            <td class="border-bottom"><%= @member.dog_age %>歳</td>
            <td class="border-bottom"><%= @member.dog_gender %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-borderd">
          <tr class="table-borderless">
            <th>
              <span class="bg-light h3 col-12"><%= @member.name %>さんが投稿したレシピ</span>
            </th>
          </tr>
          <tr class="bg-light">
            <th class="col-3">タイトル</th>
            <th class="col-3">紹介文</th>
            <th class="col-3">コメント・いいね</th>
          </tr>
          <% @post_recipes.each do |post_recipe| %>
            <tr>
              <td class="border-bottom">
                <%= link_to post_recipe_path(post_recipe.id), class:"text-dark" do %>
                  <% if post_recipe.image.attached? %>
                    <%= image_tag post_recipe.image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                  <%= post_recipe.title %>
                <% end %>
              </td>
              <td class="border-bottom"><%= post_recipe.introduction %></td>
              <td class="border-bottom">
                <%= link_to "コメント：#{post_recipe.post_comments.count}件", post_recipe_path(post_recipe.id) %><br>
                <%= link_to "いいね：#{post_recipe.favorites.count}件", post_recipe_path(post_recipe.id) %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
