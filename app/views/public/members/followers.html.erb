<div class="container">
  <div class="row mt-4 mb-3">
    <div class="col-9">
      <span class="bg-warning h3">フォローされている会員</span>
    </div>
    <div class="col-3"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-borderd">
        <% if @members.exists? %>
          <% @members.each do |member| %>
            <tr class="bg-light">
              <th class="col-4">会員名</th>
              <th class="col-4">愛犬の犬種</th>
              <th class="col-3">フォロー・フォロワー</th>
              <th class="col-1"></th>
            </tr>
            <tr>
              <td class="border-bottom">
                <% if member.image.attached? %>
                  <%= image_tag member.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image_member', size: "100x100" %>
                <% end %>
                <%= member.name %><br>
                <% if member.is_deleted == true %>
                  <p>＜退会済み＞</p>
                <% end %>
              </td>
              <td class="border-bottom"><%= member.dog_breed %></td>
              <td class="border-bottom">
                フォロー数：<%= member.followings.count %><br>
                フォロワー数：<%= member.followers.count %>
              </td>
              <td class="border-bottom">
                <%= link_to "Show", member_path(member.id) %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <p>・会員はいません</p>
        <% end %>
      </table>
      <div class="pagination">
        <%= paginate @members %>
      </div>
      <div class="h5 mb-5 text-right">
        <%= link_to "戻る＞", :back %>
      </div>
    </div>
  </div>
</div>