<div class="container">
  <div class="row">
    <div class="mt-5 mb-5">
      <span class="bg-info h2">会員情報編集</span>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @member do |f| %>
        <table class="ml-5">
          <tr height="50">
            <th><%= f.label :会員名（8文字以内） %></th>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :愛犬の名前（15文字以内） %></th>
            <td><%= f.text_field :dog_name %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :愛犬の犬種 %></th>
            <td><%= f.text_field :dog_breed %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :愛犬の年齢 %></th>
            <td><%= f.select :dog_age, *[1..50], include_blank: "年齢選択" %>歳</td>
          </tr>
          <tr height="50">
            <th><%= f.label :愛犬の性別 %></th>
            <td><%= f.select :dog_gender, ['オス','メス'], include_blank: "性別選択" %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :愛犬の写真 %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr height="100">
            <th></th>
            <td><%= f.submit "編集内容を保存する", class: 'btn btn-success' %></td>
            <td><%= link_to "会員をやめる", quit_members_path, class: "btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
<div>