<div class="container">
  <div class="row mt-4 mb-3">
    <div class="col-9">
      <span class="bg-warning h3">『いいね』したレシピ</span>
    </div>
    <div class="col-3"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-borderd table-hover">
        <tr class="bg-light">
          <th class="col-4">タイトル</th>
          <th class="col-3">会員名</th>
          <th class="col-2">愛犬の犬種</th>
          <th class="col-1">年齢</th>
          <th class="col-2">コメント・いいね</th>
        </tr>
        <% @favorite_post_recipes.each do |post_recipe| %>
          <tr>
            <td class="border-bottom align-middle">
              <%= link_to post_recipe_path(post_recipe.id), class:"text-dark" do %>
                <% if post_recipe.image.attached? %>
                  <%= image_tag post_recipe.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
                <%= post_recipe.title %>
              <% end %>
            </td>
            <td class="border-bottom align-middle"><%= post_recipe.member.name %></td>
            <td class="border-bottom align-middle"><%= post_recipe.member.dog_breed %></td>
            <td class="border-bottom align-middle"><%= post_recipe.member.dog_age %>歳</td>
            <td class="border-bottom align-middle">
              <%= link_to "コメント：#{post_recipe.post_comments.count}件", post_recipe_path(post_recipe.id) %><br>
              <%= link_to "いいね：#{post_recipe.favorites.count}件", post_recipe_path(post_recipe.id) %>
            </td>
          </tr>
        <% end %>
      </table>
       <div class="h5 mb-5 text-right">
        <%= link_to "戻る＞", :back %>
      </div>
    </div>
  </div>
</div>